{
  "env": {
    "browser": true,
    "es6": true,
    "webextensions": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "never"],
    "curly": ["error", "all"],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "eqeqeq": ["error", "always"],
    "no-var": "error",
    "no-use-before-define": ["error", { "functions": false, "classes": false }]
  }
}
